            <!--android:layout_height="62dp"/>-->

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:text=""
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:text=""
            android:textSize="15dp" />
</LinearLayout>