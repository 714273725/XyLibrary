<resources>
    <!-- items -->
    <style name="divider">
        <item name="android:background">@color/bgDivider</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--buttons-->
    <style name="btn" parent="Widget.AppCompat.Button.Colored">
    </style>

    <style name="buttonBase" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="btnGray" parent="buttonBase">
        <item name="colorAccent">@color/grayLite</item>
        <item name="colorButtonNormal">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btnWhite" parent="buttonBase">
        <item name="colorAccent">@color/white</item>
        <item name="colorButtonNormal">@color/grayLite</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Fresco -->
    <style name="sivHeadBase">
        <item name="android:layout_height">wrap_content</item>
        <item name="placeholderImage">@color/grayLite</item>
        <item name="placeholderImageScaleType">centerCrop</item>
        <item name="actualImageScaleType">centerCrop</item>
    </style>

    <style name="sivHeadCircleBase" parent="sivHeadBase">
        <item name="roundAsCircle">true</item>
        <item name="roundingBorderWidth">0dp</item>
        <item name="roundingBorderColor">@color/white</item>
    </style>

    <style name="sivPicBase">
        <item name="android:layout_height">wrap_content</item>
        <item name="placeholderImage">@color/grayLite</item>
        <item name="placeholderImageScaleType">fitXY</item>
        <item name="actualImageScaleType">fitXY</item>
    </style>


</resources>
